anything = Symbol:: 'anything'


describe = fn descr, tests:
  global.describe:: descr, fn:
    tests()
    undefined
  undefined


it = fn descr, test:
  global.it:: descr, fn:
    await test()
    undefined


expect = fn actual, expectation:
  expectation:: global.expect:: actual

to_equal = fn expected: fn expect_actual:
  expect_actual.toEqual:: expected


to_throw = fn expected: fn expect_actual:
  match expected:
    anything: expect_actual.toThrow()
    else: expect_actual.toThrow:: expected


not = fn expected: fn expect_actual:
  expected:: expect_actual.not
